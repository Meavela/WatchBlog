{% extends 'base.html.twig' %}

{% block title %}WatchBlog{% endblock %}
{% block body %}

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('watchblog') }}">WatchBlog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    {% if userConnected == null %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="../../login">Log In</a>
                        </li>
                    {% endif %}
                    {% if userConnected != null %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('profile') }}">{{ userConnected.username }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="../../logout">Log Out</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <header class="masthead text-center text-white">
        <div class="masthead-content">
            <div class="container">
                <h1 class="masthead-heading mb-0">Share your experiences !</h1>
                <h2 class="masthead-subheading mb-0">What movies & series do you watch ?</h2>
            </div>
        </div>
    </header>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                        <div class="ImageOnHover">
                            <img class="img-fluid rounded-circle image" src="
                                {% if userConnected != null %}
                                    {{ asset('blog/uploads/users/' ~ userConnected.image) }}
                                {% endif %}
                                {% if userConnected == null %}
                                    {{ asset('blog/img/anonyme.png') }}
                                {% endif %}" alt="">
                            <div class="overlay">
                                <div class="text">
                                    <a type="button" href="{{ path('profile') }}" class="btn btn-light">
                                        About you
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">Your profile</h2>
                        <p>Who are you ?</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="p-5">
                        <div class="ImageOnHover">
                            <img class="img-fluid rounded-circle image" src="{{ asset('blog/img/lastmovies.jpg') }}" alt="">
                            <div class="overlay">
                                <div class="text">
                                    <a type="button" href="{{ path('video_new') }}" class="btn btn-light">
                                        Add movies & series
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="p-5">
                        <h2 class="display-4">Share movies & series</h2>
                        <p>You want to share movies or series ? <u><b>It's here !</b></u> </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                        <div class="ImageOnHover">
                            <img class="img-fluid rounded-circle image" src="{{ asset('blog/img/discuss.jpg') }}" alt="">
                            <div class="overlay">
                                <div class="text">
                                    <a type="button" href="{{ path('video_list') }}" class="btn btn-light">
                                        View movies & series
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">Find your happiness !</h2>
                        <p>You want to know which movie is the best ? Come here ! You can <u><b>discuss</b></u> and <u><b>share your experiences</b></u> with different people ! </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-5 bg-black">
        <div class="container">
            <p class="m-0 text-center text-white small">Copyright &copy;LouBEGE 2019</p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('blog/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('blog/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

{% endblock %}
